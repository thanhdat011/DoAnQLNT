
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
<table align="center">

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:48px">
            <td> Họ tên khách hàng:</td>
            <td>
                @Html.TextBox("HotenKH")
                @ViewData["Loi1"]
            </td>
        </tr>


        <tr style="height:40px">
            <td> Tên đăng nhập:</td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi2"]
            </td>
        </tr>


        <tr style="height: 40px">
            <td> Mật khẩu:</td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi3"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu nhập lại: </td>
            <td>
                @Html.Password("Matkhaunhaplai")
                @ViewData["Loi4"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Địa chỉ</td>
            <td>
                @Html.TextBox("Diachi") 
                @ViewData["Loi5"]
            </td>
        </tr>

        <tr style="height:40px">
            <td> Email</td>
            <td>
                <input type="email" name="Email" />
                @*@Html.TextBox("Email")
                @ViewData["Loi6"]*@
            </td>
        </tr>

    <tr style="height:40px">
        <td>Số điện thoại</td>
        <td>
            @Html.TextBox("DienThoai") 
            @ViewData["Loi7"]
        </td>
    </tr>

    <tr style="height:40px">
        <td> Ngày Sinh:</td>
        <td>
            <input type="date" name="Ngaysinh" />
        </td>
    </tr>
    <tr style="height:40px">
        <td></td>
        <td>
            <input style="border-radius: 5px" type="submit" value="Đăng Ký" />
        </td>
    </tr>
    }

    

</table>



